.question
  = render 'question'

.col-lg-12.top-buffer
  h3 = t('.answers_list')
  .answers
    = render 'answers'

  .new-answer-form.top-buffer
    h4 = t('.new_answer')
    .errors
    = form_for [@question, @answer], remote: true do |f|
      = render 'answers/answer_fields', f: f
      .right
        = f.submit t('.submit_answer'), class: 'btn btn-primary'
