<% if @question.errors.present? %>
  $('.question-errors').html('<%= render_errors_for(@answer, remotipart_submitted?) %>');
  <% @question.errors.each do |attr| %>
    var div = $('#question_' + '<%= attr %>').parent();
    div.addClass('field_with_errors');
  <% end %>
<% elsif response.status == 200 %>
  $('.question').html('<%= render_resource(@question, remotipart_submitted?) %>');
  $('.question-errors').empty();
<% end %>

$('.flash').html('<%= bootstrap_flash %>');
<% flash.discard %>
