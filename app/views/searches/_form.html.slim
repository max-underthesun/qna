= form_tag search_path, method: :get do

  .form-group
    = label :query, "Your are looking for?"
    = text_field_tag :query, nil, placeholder: "Enter here", class: 'form-control'

  .form-group
    = label :scope, "Where to search?"
    = select_tag :scope, options_for_select(Search::RESOURCES.keys), class: 'form-control'

  .right
    = submit_tag "Search", class: 'btn btn-primary'
