<% if @success %>
  $('.flash').html('<%= bootstrap_flash %>');
  $('.errors').empty();
  $('.form-group').removeClass('field_with_errors');
  $('.answers').append('<%= j render 'questions/answer', answer: @answer %>');
  $('#answer_body').val('');
<% else %>
  $('.errors').html('<%= j render 'common/errors', resource: @answer %>');
  $('.form-group').addClass('field_with_errors');
<% end %>