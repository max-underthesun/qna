<% if @answer.errors.present? %>
  var errors;
  errors = $('#' + '<%= @answer.id %>' + '.answer-errors');
  $('.flash').empty();
  errors.html('<%= j render 'common/errors', resource: @answer %>');
<% else %>
  <% flash[:notice] = I18n.t('confirmations.answers.best') %>
  $('.answers').html('<%= j render 'questions/answers' %>');
  $('.flash').html('<%= bootstrap_flash %>');
  <% flash.discard(:notice) %>
<% end %>
