<% url = subscription_path(@subscription) %>
<% if @subscription.errors.present? %>
  errors.html('<%= render_errors_for(@subscription, remotipart_submitted?) %>');
<% else %>
  $('.subscription').html('<%= link_to('unsubscribe', url, method: :delete, remote: true) %>');
<% end %>

$('.flash').html('<%= bootstrap_flash %>');
<% flash.discard %>
